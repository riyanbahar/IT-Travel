<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextStyle">@color/colorTitleText</item>
        <item name="colorPrimary">@color/theme_main_color</item>
        <item name="colorPrimaryDark">@color/theme_main_color_dark</item>
        <item name="colorAccent">@color/theme_main_color_accent</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="AppTheme.SettingsTheme.Toolbar" parent="AppTheme.SettingsTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>

    <style name="ratingBarList" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>


    <style name="ratingBarUserRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar_user_full</item>
        <item name="android:minHeight">72dip</item>
        <item name="android:maxHeight">72dip</item>
    </style>

    <style name="ColoredButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_main_color</item>
        <item name="android:textColor">@color/text_white_color</item>
    </style>

    <style name="AppTheme.GreenButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_main_color</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/theme_main_color</item>
    </style>

    <style name="AppTheme.FacebookButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorFacebook</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/colorFacebook</item>
    </style>

    <style name="AppTheme.TwitterButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorTwitter</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/colorTwitter</item>
    </style>

    <style name="AppTheme.AccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_main_color_accent</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/theme_main_color_accent</item>
    </style>

    <style name="AppTheme.ContactUsButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_main_color_accent</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/theme_main_color_accent</item>
    </style>

    <style name="AppTheme.ThemeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_main_color</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/theme_main_color</item>
    </style>

    <style name="AppTheme.RedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_red_color</item>
        <item name="android:textColor">@color/text_white_color</item>
        <item name="android:background">@color/button_red_color</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/consent_color</item>
    </style>
</resources>
