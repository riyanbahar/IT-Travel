<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.storefinder">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.application.StoreFinderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.apps.storefinder.SplashActivity"
            android:theme="@style/SplashTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.apps.storefinder.MainActivity"
            android:theme="@style/MainTheme"
            android:label="@string/app_name"/>

        <activity
            android:name="com.projects.activities.SettingsActivity"
            android:theme="@style/AppTheme.SettingsTheme"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/settings"/>

        <activity android:name="com.projects.accounts.ProfileActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/app_name" />

        <activity android:name="com.projects.accounts.RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/app_name" />



        <activity android:name="com.projects.accounts.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.DetailActivity"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.ReviewActivity"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.NewReviewActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.ImageViewerActivity"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.NewsDetailActivity"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.StoreActivity"
            android:label="@string/app_name" />

        <activity android:name="com.projects.activities.SearchResultActivity"
            android:label="@string/app_name" />

        <activity android:name=".ConsentActivity"
            android:label="@string/consent" />

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/googlemapsapi" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

    </application>

</manifest>