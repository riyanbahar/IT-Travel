<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_margin="5dp"
	card_view:cardCornerRadius="2dp"
	card_view:cardElevation="5dp"
	android:layout_height="wrap_content"
	android:layout_width="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical" >

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<LinearLayout
				android:id="@+id/linearMain"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dimen_5dp" >

				<com.libraries.imageview.RoundedImageView
					android:id="@+id/imgViewThumb"
					android:layout_width="75dp"
					android:layout_height="75dp"
					android:baselineAlignBottom="false"
					android:scaleType="centerCrop"
					android:src="@mipmap/bg_image_thumb_placeholder"
					app:mutate_background="false" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dimen_10dp"
					android:orientation="horizontal" >

					<LinearLayout
                        android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical" >

						<TextView
							android:id="@+id/tvTitle"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Medium Text"
							android:textSize="@dimen/text_size_16sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/tvDatePosted"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dimen_5dp"
							android:textSize="@dimen/text_size_14sp"
							android:text="Medium Text" />

						<TextView
							android:id="@+id/tvDetails"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dimen_5dp"
							android:textSize="@dimen/text_size_14sp"
							android:text="Medium Text" />

					</LinearLayout>

                    <ImageView
						android:id="@+id/imgDelete"
						android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:src="@drawable/ic_delete" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/linearLoadMore"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="@dimen/dimen_5dp"
				android:orientation="vertical" >

					<TextView
						android:id="@+id/tvLoadMore"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_margin="@dimen/dimen_10dp"
						android:text="Medium Text"
						android:textSize="@dimen/text_size_16sp"
						android:textStyle="bold" />

				</LinearLayout>

		</FrameLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>
